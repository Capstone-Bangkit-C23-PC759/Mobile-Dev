<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <androidx.cardview.widget.CardView
            style="@style/ShapeAppearance.Material3.Corner.Medium"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/body"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/banner"
                app:srcCompat="@drawable/test" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right"
                android:orientation="vertical"
                android:outlineProvider="none">

                <Button
                    android:id="@+id/button"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Test Yuk !!!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="For you" />

            <TextView
                android:id="@+id/textView3"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="Selengkapnya"
                android:textAlignment="textEnd"
                android:textStyle="bold" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/content1"
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:layout_marginEnd="15dp"
                    android:contextClickable="true"
                    app:cardBackgroundColor="@color/body"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:contentPadding="15dp">

                    <ImageView
                        android:id="@+id/img_cont1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:src="@drawable/test"
                        app:srcCompat="@drawable/sit" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_cont1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OCD"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subtitle_cont1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Obsessive compulsive disorder"
                            android:textSize="10sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/content2"
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:layout_marginEnd="15dp"
                    android:contextClickable="true"
                    app:cardBackgroundColor="@color/body"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:contentPadding="15dp">

                    <ImageView
                        android:id="@+id/img_cont2"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/test"
                        app:srcCompat="@drawable/talk" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_cont2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anxiety"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subtitle_cont2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Kekhawatiran berlebih terhadap sesuatu"
                            android:textSize="10sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:contextClickable="true"
                    app:cardBackgroundColor="@color/body"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:contentPadding="15dp">

                    <ImageView
                        android:id="@+id/img_cont3"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:scaleType="centerInside"
                        android:src="@drawable/test"
                        app:srcCompat="@drawable/walk" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_cont3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Depresi"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subtitle_cont3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="perasaan terbebani terhadap suatu pikiran"
                            android:textSize="10sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

